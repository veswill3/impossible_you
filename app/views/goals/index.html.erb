<h1>Listing goals</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Completed</th>
    <th>Img url</th>
    <th>List</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goals.each do |goal| %>
  <tr>
    <td><%= goal.title %></td>
    <td><%= goal.description %></td>
    <td><%= goal.completed %></td>
    <td><%= goal.img_url %></td>
    <td><%= goal.list %></td>
    <td><%= link_to 'Show', goal %></td>
    <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
    <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

