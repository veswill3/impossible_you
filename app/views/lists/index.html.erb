<h1>All the Impossibilists</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= list.description %>
    <ul class="inline thumbnails">
      <% list.goals.each do |goal| %>
        <li class="span2"><img src=<%= goal.img_url %> class="img-circle"></li>
      <% end %>
    </ul>
    </td>
    <td><%= link_to 'Show', list, class: "btn btn-small" %></td>
    <% if false %>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New List', new_list_path, class: "btn btn-mini" %>
